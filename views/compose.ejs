<%- include('partials/header'); -%>
    <h1>Compose</h1>
    <form action="/compose" method="POST">
        <div class="form-group"><label for="posttitle">Title:</label><br>
            <input type="text" id="fname" name="posttitle" class="form-control"><br>
        </div>

        <div class="form-group"><label for="postbody">Post:</label><br>
            <textarea  cols="40" rows="5" class="form-control" name="postbody"></textarea><br>
        </div>
        <div class="form-group">
            <button type="Submit" name="button" class="btn btn-primary" >Publish </button>
        </div>
    </form>
